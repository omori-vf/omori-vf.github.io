---
import { t, changeLanguage } from "i18next";
import Layout from "../layouts/Layout.astro";
import TeamMembers from "../components/TeamMembers.svelte";
import type { TeamMember } from "../models";

changeLanguage("fr");

const members: TeamMember[] = [
  {
    name: "Mirry",
    about: t("team.mirry"),
    backgroundUri: "Mirry background",
    pictureUri: "Mirry picture",
  },
  {
    name: "Kris",
    about: "Kris text",
    backgroundUri: "Kris background",
    pictureUri: "Kris picture",
  },
];
---

<Layout title={t("team.title")}>
  <TeamMembers
    members={members}
    menuTitle={t("team.menuTitle")}
    backText={t("team.back")}
    client:load
  />
</Layout>
