---
import { t } from "i18next";
import Frame from "../components/Frame.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title={t("installation.title")}>
  <Frame>
    <section>
      <h1>{t("installation.title")}</h1>
      <p>{t("installation.p1")}</p>
      <ol>
        <li>{t("installation.steps.step1")}</li>
        <li>
          {t("installation.steps.step2")}
          <a href="">{t("terms.here")}</a>.
        </li>
        <li>{t("installation.steps.step3")}</li>
      </ol>
      <p>
        {t("installation.finished")}
      </p>
      <p>
        {t("installation.local_files")}
      </p>
      <img
        class="content-image"
        src="img/installation/omori_local_files.gif"
        alt="omori_local_files"
      />
      <p>
        <b>{t("terms.Note")} :</b>
        {t("installation.overwrite")}
      </p>

      <p>
        {t("installation.issue")}
        <a href="">{t("terms.here")}</a>. {t("installation.help_contact")}
      </p>
    </section>
  </Frame>
</Layout>

<style>
  img {
    align-self: center;
    margin-top: 10px;
    margin-bottom: 10px;
  }

  section {
    display: flex;
    flex-direction: column;
    padding: 0 var(--spacing-l) var(--spacing-l);
  }

  h1 + * {
    margin-top: var(--spacing-m);
  }
</style>
