---
import { Trans } from "astro-i18next/components";
import { t } from "i18next";
import Frame from "../components/Frame.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title={t("installation.title")}>
  <Frame>
    <section class="content">
      <h1>{t("installation.title")}</h1>
      <p>{t("installation.p1")}</p>
      <ol>
        <li>{t("installation.steps.step1")}</li>
        <li>
          {t("installation.steps.step2")}
          <a
            href="https://github.com/omori-vf/omori-vf.github.io/releases/download/v1.0.8/patch.zip"
            >{t("terms.here")}</a
          >.
        </li>
        <li>{t("installation.steps.step3")}</li>
      </ol>
      <p>
        {t("installation.finished")}
      </p>
      <p>
        {t("installation.local_files")}
      </p>
      <img
        class="content-image"
        src="/img/installation/omori_local_files.webp"
        alt="omori_local_files"
      />
      <p>
        <b>{t("terms.Note")} :</b>
        {t("installation.overwrite")}
      </p>

      <p>
        <Trans i18nKey="installation.issue">
          <a target='\"_blank\"' href="https://discord.gg/omorifr">Discord</a>
        </Trans>
      </p>
    </section>
  </Frame>
</Layout>

<style>
  img {
    align-self: center;
    margin-top: 10px;
    margin-bottom: 10px;
  }

  h1 + * {
    margin-top: var(--spacing-m);
  }
</style>
