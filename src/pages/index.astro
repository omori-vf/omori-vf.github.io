---
import { t, changeLanguage } from "i18next";
import Layout from "../layouts/Layout.astro";
import { Trans } from "astro-i18next/components";
import Frame from "../components/Frame.astro";
import { YouTube } from "@astro-community/astro-embed-youtube";

changeLanguage("fr");
---

<Layout title={t("index.welcome")}>
  <Frame>
    <h1>{t("index.welcome")}</h1>

    <div class="video"><YouTube id="PwJcIAFfyQ8" /></div>

    <h2>{t("index.disclaimer")}</h2>

    <p class="instructions">
      <Trans i18nKey="index.introduction">
        We are not affiliated, associated, authorized, endorsed by, or in any
        way officially connected with OMOCAT, or any of its subsidiaries or its
        affiliates. The official OMORI website can be found at
        <a href="https://www.omori-game.com" target="_blank"
          >https://www.omori-game.com</a
        >.
      </Trans>
    </p>
  </Frame>
</Layout>

<style>
  .video {
    display: flex;
    justify-content: center;
  }

  .video > * {
    flex: 1 1 720px;
  }

  .video,
  h2,
  p {
    margin-top: var(--spacing-m-em);
  }
</style>
