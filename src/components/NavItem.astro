---
export interface Props {
  title: string;
  link: string;
  class: string;
}

const { title, link, class: className } = Astro.props;
---

<li class={className}>
  <a data-text={title} href={link}>{title}</a>
</li>

<style>
  li {
    list-style-type: none;
  }

  li > a {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    color: inherit;
    text-decoration: none;
  }

  li > a:visited {
    color: var(--white);
  }

  li > a:hover {
    font-weight: var(--font-weight-bold);
  }

  li > a::after {
    content: attr(data-text);
    height: 0;
    visibility: hidden;
    overflow: hidden;
    user-select: none;
    pointer-events: none;
    font-weight: var(--font-weight-bold);
  }

  @media speech {
    li > a::after {
      display: none;
    }
  }
</style>
