---
import { t } from "i18next";
import FAQEntry from "./FAQEntry.svelte";
---

<ol>
  {
    (
      t("faq.entries", { returnObjects: true }) as {
        question: string;
        answer: string;
      }[]
    ).map((item) => <FAQEntry question={item.question} answer={item.answer} />)
  }
</ol>

<style>
  li {
    margin-top: 10px;
  }
</style>

<style is:inline>
  div.centered-img {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 10px;
  }

  img {
    height: 300px;
  }

  ol * {
    margin-top: 10px;
  }
</style>
