---
import i18next from "i18next";
import FAQEntry from "./FAQEntry.svelte";
---

<ol>
  {
    i18next
      .getDataByLanguage(i18next.language)
      .translation.faq.entries.map((item) => (
        <FAQEntry question={item.question} answer={item.answer} />
      ))
  }
</ol>

<style>
  li {
    margin-top: 10px;
  }
</style>

<style is:inline>
  div.centered-img {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 10px;
  }

  img {
    height: 300px;
  }

  ol * {
    margin-top: 10px;
  }
</style>
